<div class="page-header">
  <h1>All Events</h1>
</div>

<%= link_to 'New event', new_event_path, class: "btn btn-primary" %>
<div id="post-btn-margin">
</div>
<% @events.each do |event| %>
<div class="event">
  <span id="event-index-title"><h3><%= link_to event.title, event %></h3></span>
  <p>
  <%= event.text %>
  </p>
  <div class="meta">
    
    <span id="gray-time">
    <%= time_ago_in_words(event.created_at) + " ago" %>
    </span>
    <span class ="admin">
      | <%= link_to "Edit", edit_event_path(event) %> |
      <%= link_to "Delete", event, method: :delete, data: { confirm: "Are you sure?"} %>
    </span>
  </div>
</div>
<% end %>







