<%= simple_form_for([@event, @event.comments.build]) do |f| %>

  <p>
    <%= f.input :user_id, collection: User.all, label_method: :full_name %>
  </p>

  <p>
    <%= f.label :body %><br /><!--change to validate "text" etc instead.-->
    <%= f.text_area :body %>
  </p>
  <p>

    <%= f.button :submit, "Create Comment", :class => 'btn btn-large btn-primary' %>
  </p>
<% end %>